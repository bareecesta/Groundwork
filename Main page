      --brown-900: #3b1f12; /* darkest */
      --brown-700: #6b3d2a; /* mid */
      --brown-500: #a26b52; /* lighter */
      --hole: #2f180f;
    }

    html,body{
      height:100%;
      margin:0;
      background:var(--bg);
      font-family: Inter, "Helvetica Neue", Arial, sans-serif;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
      display:flex;
      align-items:center;
      justify-content:center;
    }

    /* container keeps the SVG centered and responsive */
    .canvas {
      width: min(760px, 92vw);
      max-width: 880px;
      aspect-ratio: 1 / 1; /* square-ish layout */
      display: grid;
      place-items: center;
    }

    /* Accessible off-screen heading */
    .sr-only {
      position: absolute !important;
      height: 1px; width: 1px;
      overflow: hidden;
      clip: rect(1px,1px,1px,1px);
